{
    "license": "proprietary",
    "type": "project",
    "require": {
        "composer-runtime-api": "^2.0",
        "shopware/administration": "~v6.5.0",
        "shopware/core": "~v6.5.0",
        "shopware/elasticsearch": "~v6.5.0",
        "shopware/storefront": "~v6.5.0",
        "symfony/flex": "~2",
        "symfony/runtime": "^5.0|^6.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "custom/plugins/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "custom/plugins/*/packages/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "custom/static-plugins/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "assets:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "docker:compose:up": "docker-compose up -d",
        "docker:compose:stop": "docker-compose stop",
        "symfony:proxy:start": "symfony proxy:start",
        "symfony:proxy:stop": "symfony proxy:stop",
        "symfony:server:dev:start": [
            "symfony server:stop --dir=public",
            "symfony server:start --dir=public --port=8000 --daemon",
            "symfony server:status --dir=public"
        ],
        "symfony:server:dev:stop": "symfony server:stop --dir=public",
        "symfony:server:e2e:start": [
            "APP_ENV=e2e symfony server:stop --dir=public",
            "APP_ENV=e2e symfony server:start --port=8005 --dir=public --daemon",
            "APP_ENV=e2e symfony server:status --dir=public"
        ],
        "symfony:server:e2e:stop": [
            "APP_ENV=e2e symfony server:stop --dir=public"
        ],
        "dev:start": [
            "@docker:compose:up",
            "@symfony:proxy:start",
            "@symfony:server:dev:start",
            "@symfony:server:e2e:start"
        ],
        "dev:stop": [
            "@symfony:server:e2e:stop",
            "@symfony:server:dev:stop",
            "@symfony:proxy:stop",
            "@docker:compose:stop"
        ],
        "tests:e2e:prepare": [
            "APP_URL=https://127.0.0.1:8005 APP_ENV=e2e bin/console system:install --basic-setup --create-database --drop-database --force -n",
            "APP_ENV=e2e bin/console system:config:set core.frw.completedAt '2019-10-07T10:46:23+00:00'",
            "APP_ENV=e2e bin/console e2e:dump-db"
        ],
        "tests:e2e:cypress:run": "APP_ENV=e2e CYPRESS_shopwareRoot=$(pwd) CYPRESS_localUsage=1 npx cypress run",
        "tests:e2e": [
            "@tests:e2e:cypress:run"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "endpoint": [
                "https://raw.githubusercontent.com/shopware/recipes/flex/main/index.json",
                "flex://defaults"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\ShopwareShop\\": "src/"
        }
    }
}
