{
    "license": "proprietary",
    "type": "project",
    "require": {
        "composer-runtime-api": "^2.0",
        "shopware/administration": "~v6.5.0",
        "shopware/core": "~v6.5.0",
        "shopware/elasticsearch": "~v6.5.0",
        "shopware/storefront": "~v6.5.0",
        "symfony/flex": "~2",
        "symfony/runtime": "^5.0|^6.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "custom/plugins/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "custom/plugins/*/packages/*",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "custom/static-plugins/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "auto-scripts": {
            "assets:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "e2e:server:start": [
            "APP_ENV=e2e symfony server:stop --dir=public",
            "APP_ENV=e2e symfony server:start --port=8005 --dir=public --daemon",
            "APP_ENV=e2e symfony server:status --dir=public"
        ],
        "e2e:server:stop": [
            "APP_ENV=e2e symfony server:stop --dir=public"
        ],
        "e2e:run": [
            "@e2e:server:start",
            "APP_ENV=e2e CYPRESS_shopwareRoot=$(pwd) npx cypress run",
            "@e2e:server:stop"
        ]
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "endpoint": [
                "https://raw.githubusercontent.com/shopware/recipes/flex/main/index.json",
                "flex://defaults"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\ShopwareShop\\": "src/"
        }
    }
}
